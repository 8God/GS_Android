<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_toolbar"
        android:layout_marginTop="-4dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edt_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_normal_layout_bg"
            android:hint="@string/old_pwd_hint"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="13dp"
            android:textColorHint="#AFAFAF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_normal_layout_bg"
            android:hint="@string/new_pwd_hint"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="13dp"
            android:textColorHint="#AFAFAF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_reconfirm"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_normal_layout_bg"
            android:hint="@string/reconfirm_hint"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="13dp"
            android:textColorHint="#AFAFAF"
            android:textSize="15sp" />
    </LinearLayout>

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar" />

</RelativeLayout>